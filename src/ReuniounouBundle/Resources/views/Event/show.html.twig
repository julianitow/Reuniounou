{% extends "@Reuniounou/Default/template.html.twig" %}
{% block navbar %}

<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <a class="navbar-brand" href="#">Reunionou</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarNav">

        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link" href="{{ path('application_homepage') }}">Accueil</a>
            </li>
        {% if id == null %}
            <li class="nav-item">
                <a class="nav-link" href="{{ path('connexion') }}">Connexion</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="{{ path('inscription') }}">Inscription</a>
            </li>
        {% else %}
            <li class="nav-item">
                <a class="nav-link" href="{{ path('deconnexion') }}">Déconnexion</a>
            </li>
        {% endif %}
        </ul>
    </div>
</nav>

{% endblock %}
{% block body %}
<div class="container">
    <div class="jumbotron">
    {% if event %}
        <center><h2>{{ event.titre }}</h2></center>
        <p>{{ event.description | nl2br }}</p>
        <p>Se déroule le {{ event.date.format('d/m/Y H:i') }}<br>Evenement {{ visibility }}</p>
        <p class="text-muted">{{ event.utilisateur.prenom }} {{ event.utilisateur.nom }}</p>
    {% else %}
        <h2>Evenement non trouvé</h2>
    {% endif %}
    	</div>
	</div>
{% endblock %}
